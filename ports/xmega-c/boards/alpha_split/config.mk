CDEFS += -DVBUS_PIN_PORT=C
CDEFS += -DVBUS_PIN_NUM=1
CDEFS += -DVBUS_PIN_INT_NUM=1

CDEFS += -DNRF24_IRQ_PIN_PORT=B
CDEFS += -DNRF24_IRQ_PIN_NUM=3
CDEFS += -DNRF24_IRQ_INT_NUM=1

