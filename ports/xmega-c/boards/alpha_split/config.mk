#### v2
# Note: USB_SEL is connected to I2C_OE_LEFT

DUAL_USB := 1

CDEFS += -DALPHA_SPLIT_V2
CDEFS += -DI2C_OE_LEFT_PORT=PORTR
CDEFS += -DI2C_OE_LEFT_PIN=PIN0_bm

CDEFS += -DI2C_OE_RIGHT_PORT=PORTE
CDEFS += -DI2C_OE_RIGHT_PIN=PIN3_bm

CDEFS += -DUSB_OE_PORT=PORTR
CDEFS += -DUSB_OE_PIN=PIN1_bm

CDEFS += -DNRF24_CE_PORT=PORTB
CDEFS += -DNRF24_CE_PIN=PIN2_bm

USE_CHECK_PIN := 1
USE_USB := 1
USE_SCANNER := 1
USE_NRF24 := 1
USE_I2C := 1
USE_HARDWARE_SPECIFIC_SCAN := 0
